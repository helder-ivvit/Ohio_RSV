<body class="hold-transition login-page">

    @Html.Hidden("RedirectLogin", Url.Action("Index", "Home"))

    <div class="login-box">

        <div class="card card-outline card-primary">

            <div class="card-header text-center">
                <img src="~/Content/LOGO/logo_ohio.png" style="width: 300px;height:70px;" />
            </div>
            <div class="card-body">
                <h4 style="text-align:center;">Iniciar Sesi&oacute;n</h4>
                @*<form action="../../index3.html" method="post">*@
                <div class="input-group mb-3">
                    <input type="text" id="usuario" class="form-control" placeholder="Usuario">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" id="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-12 text-center">
                        <label id="mensaje_error" class="text-danger d-none">Ingrese datos para el logueo</label>

                        <button type="button" class="btn btn-primary btn-block" id="validarLogin">Ingresar</button>
                    </div>

                </div>
                @*</form>*@

            </div>

        </div>

    </div>




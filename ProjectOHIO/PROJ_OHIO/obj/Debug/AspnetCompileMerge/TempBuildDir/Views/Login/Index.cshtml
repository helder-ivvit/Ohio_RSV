<script>

    const alert_error_log = (title, msg) => {
        swal({
            title: title,
            text: msg,
            icon: "error",
        });
    }


    function alerta_href_log(_title, _msg, _url) {

        swal(_title, _msg, "success", {
            buttons: {
                //cancel: "Cancelar!",
                catch: {
                    text: "OK",
                    value: "catch",
                },
                defeat: false,
            },
        })
            .then((value) => {
                switch (value) {
                    case "defeat":
                        swal("Pikachu fainted! You gained 500 XP!");
                        break;
                    case "catch":
                        //swal("Gotcha!", "Pikachu was caught!", "success");
                        location.href = _url; //href;
                        break;
                    //default:
                    //  swal("Got away safely!");
                }
            });

    }


    $(document).ready(function () {
        $('#validarLogin').click(function () {

            usuario = $("#usuario").val();
            clave = $("#password").val();

            $("#mensaje_error").addClass("d-none");

            if ($.trim(usuario) == "" || $.trim(clave) == "")
            {
                $("#mensaje_error").removeClass("d-none");
                return false;
            }

            var data = {
                "usuario": usuario,
                "password": clave
            };
            $.ajax({
                url: "/Login/validateuser",
                type: "POST",
                data: JSON.stringify(data),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    console.log("sssss");
                    console.log(response);

                    if (response.operacion) {
                        
                        //toastr.success(response.mensaje);
                        //setTimeout("location.href ='@Url.Action("Index", "Home")'", 1000);

                        var url = $("#RedirectLogin").val();
                        alerta_href_log(response.mensaje, '', url);
                    }
                    else {
                        //alert("usuario o contaseña incorrectos");

                        //toastr.error(response.mensaje)
                        alert_error_log(response.mensaje);

                        //window.location.href = "@Url.Action("Index", "Login")";
                        
                    }

                },
                error: function () {
                    console.log('Fallo!!!');
                }
            });
        });
    });
</script>

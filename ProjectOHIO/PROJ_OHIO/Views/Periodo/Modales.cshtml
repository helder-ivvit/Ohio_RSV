
<div class="modal fade" id="modal-sm-periodo" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header btn-primary">
                <h4 class="modal-title" id="titulo_modal">Nuevo Periodo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="frmPeriodoRegistrar">


                    <input type="hidden" id="v_anio_hidden" name="v_anio_hidden" value="">
                    <input type="hidden" id="v_mes_hidden" name="v_anio_hidden" value="">


                    @*   se muestra solo al modificar   *@



                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="exampleInputBorder">Año</label>
